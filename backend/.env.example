# Web App Separação de Pedidos PMCELL - Configuração de Ambiente
# Copie este arquivo para .env e preencha com os valores reais

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app

# Database (PostgreSQL em produção)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (Cache + WebSockets Channel Layer)
REDIS_URL=redis://host:port/0

# Django Security
CSRF_TRUSTED_ORIGINS=https://your-app.railway.app

# Application Settings
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo

# Session Settings (em segundos - default: 8 horas)
SESSION_COOKIE_AGE=28800

# Cache Timeout (em segundos - default: 5 minutos)
CACHE_TIMEOUT=300
